@model IEnumerable<FrontEndExam.Models.Movie>
@{
    ViewBag.Title = "Fantasy";
}

<h2>Fantasy Movies</h2>

<div class="row">
    @foreach (var item in Model)
    {
            <div class="col-xs-6 col-sm-4">
                <div><h3 class="text-center">@Html.ActionLink(item.Title, "../Movies/Details", new { id = item.ID })</h3></div>
                <div><a href='@Url.Action("../Movies", "Details")'><img style="object-fit: cover; width:50vw" class="img-responsive" alt="Responsive image" src="@Html.DisplayFor(modelItem => item.Poster)" /></a><h3>@Html.DisplayFor(modelItem => item.Price) DKK</h3></div>
            </div>
    }
</div>