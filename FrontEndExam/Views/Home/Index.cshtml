@model IEnumerable<FrontEndExam.Models.Movie>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>FrontEnd Exam</h1>
</div>
<div>
    <img width="100%" src="http://www.dgma.dk/wp-content/uploads/2016/01/9f63fd3788bb29ea25a90731f0df6bef_w680.jpg" />
</div>

<div style="width: 100%; height: 2vw; border-bottom: 1px solid grey; text-align: center">
    <span style="font-size: 40px; background-color: #F3F5F6; padding: 0 10px;">
        Reccomended Titles <!--Padding is optional-->
    </span>
</div>
<br />
<div class="row">
@foreach (var item in Model)
{
    if (item.Title == "The Dark Knight") {
    <div class="col-xs-6 col-sm-4">
        <div><h3 class="text-center">@Html.ActionLink(item.Title, "../Movies/Details", new { id = item.ID })</h3></div>
        <div><a href='@Url.Action("../Movies/Details", new { id = item.ID })'><img style="object-fit: cover; width:50vw" class="img-responsive" alt="Responsive image" src="@Html.DisplayFor(modelItem => item.Poster)" /></a><h3>@Html.DisplayFor(modelItem => item.Price) DKK</h3></div>
    </div>
    }
    if (item.Title == "It")
    {
    <div class="col-xs-6 col-sm-4">
        <div><h3 class="text-center">@Html.ActionLink(item.Title, "../Movies/Details", new { id = item.ID })</h3></div>
        <div><a href='@Url.Action("../Movies/Details", new { id = item.ID })'><img style="object-fit: cover; width:50vw" class="img-responsive" alt="Responsive image" src="@Html.DisplayFor(modelItem => item.Poster)" /></a><h3>@Html.DisplayFor(modelItem => item.Price) DKK</h3></div>
    </div>
    }
    if (item.Title == "Die Hard")
    {
    <div class="col-xs-6 col-sm-4">
        <div><h3 class="text-center">@Html.ActionLink(item.Title, "../Movies/Details", new { id = item.ID })</h3></div>
        <div><a href='@Url.Action("../Movies/Details", new { id = item.ID })'><img style="object-fit: cover; width:50vw" class="img-responsive" alt="Responsive image" src="@Html.DisplayFor(modelItem => item.Poster)" /></a><h3>@Html.DisplayFor(modelItem => item.Price) DKK</h3></div>
    </div>
    }
}
</div>