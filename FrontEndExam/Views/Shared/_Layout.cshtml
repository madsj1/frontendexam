<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Frontend Exam Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <div class="content">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://i.imgur.com/K4PDtaT.png" />
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("All Movies", "Index", "Movies")</li>
                    <li>@Html.ActionLink("Horror", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    
        <footer class="footer">
            <div style="border-top:1px solid grey;" class="row">
                <div class="col-md-4">
                    <h4>&copy; @DateTime.Now.Year - FrontEnd exam - Mads Jacobesn</h4>
                    <img style="object-fit: cover; max-height:50%; width:50vw" class="img-responsive" alt="Responsive image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/69/IMDB_Logo_2016.svg/1280px-IMDB_Logo_2016.svg.png" />
                </div>
                <div class="col-md-4">
                    <h4>Information</h4>
                    <p>Om Exam projekt</p>
                    <p>Ledige Stellinger</p>
                    <p>Nye produkter</p>
                </div>
                <div class="col-md-4">
                    <h4>Support</h4>
                    <p>Kontakt os</p>
                    <p>Fejl og mangler</p>
                    <p>Retur</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</div>
</body>
</html>
